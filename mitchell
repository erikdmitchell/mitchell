#!/bin/bash

# A bash script for awesomeness

version_number=0.1.0

about() {
	mitchell_logo
	echo 'awesomeness'
}

beer() {
	echo 'beer'
}

fun() {
	#FILENAME = 'file.txt'
	
	echo -n "Enter your name and press [ENTER]: "
	read name
	
	#echo "Welcome $name"
	
	echo -n "Can we store your information? [y/n] "
	read store
	
	if [ $store == "y" ]; then
		echo "Storing data..."
		echo $name >> file.txt
	else 
		echo "Bummer"
	fi
	
	echo -n "Would you like to see our friends? [y/n]"
	read friends
	
	if [ $friends == "y" ]; then
		echo "Our Friends:"
		
		while read line           
		do           
		    echo -e "$line"           
		done < file.txt  
	else 
		echo "Thanks for nothing!"
	fi	
}

help() {
	cat <<HELP
	
	OPTIONS:
		--help
		--version
	
HELP
}

startup_add() {
	dir=`dirname $0`
	file="$dir/_startup.txt"

	echo	
	echo -n "Enter your App Name: "
	read name

	echo -n "Enter your App Path: "
	read path
	
	if [ "$name" == "" ] || [ "$path" == "" ]; then
		echo "One of your inputs was blank. Please try again."
	else
		echo "Storing data..."
		echo "$name | $path" >> $file
		echo
		echo 'Startup Updated!'
	fi
}

declare -a startup_appslist
declare -a startup_apps

load_startup_apps() {
	dir=`dirname $0`
	startupfile="$dir/_startup.txt"

	let i=0
	while IFS='\n' read -r line_data; do
		IFS='| ' read -r -a array <<< ${line_data} # split our line by the pipe (|)
		
		startup_appslist[i]="${array[0]}"
		startup_apps[i]="${array[1]}"
		((++i))		
	done < $startupfile
}

startup_read() {
	load_startup_apps
	
	echo
	printf "${startup_appslist}"
	echo
	printf "${startup_apps}"
	echo
}

startup() {
	load_startup_apps
	
	echo
	echo "This script opens several applications."
	echo
	echo "Programs to open:"
	echo
	
	for i in "${startup_appslist[@]}"
	do
	   echo $i
	done
	
	echo
	echo "Opening up start up applicationsâ€¦"
	echo
	
	for ((i = 0; i < ${#startup_apps[@]}; i++))
	do
		open -a "${startup_apps[$i]}"
	done
	
	echo
	echo "Finished. Enjoy!"	
	
}

show_commands() {
	echo "COMMANDS"
}

version() {
	mitchell_logo
	echo "mitchell version $version_number"
}

check_args() {
	if [ ! -z "$1" ]; then 
		"$1"
	fi
}

mitchell_logo() {
	cat <<MITCHELLTEXT
  __  __ _ _       _          _ _ 
 |  \/  (_) |_ ___| |__   ___| | |
 | |\/| | | __/ __| '_ \ / _ \ | |
 | |  | | | || (__| | | |  __/ | |
 |_|  |_|_|\__\___|_| |_|\___|_|_|

MITCHELLTEXT
}

main() {                          
	check_args "$@"
}

if [[ "${BASH_SOURCE[0]}" = "${0}" ]]; then
	main "$@"
fi