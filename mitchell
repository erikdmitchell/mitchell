#!/bin/bash

# A bash script for awesomeness

version_number=0.1.0

about() {
	mitchell_logo
	echo 'awesomeness'
}

beer() {
	echo 'beer'
}

fun() {
	#FILENAME = 'file.txt'
	
	echo -n "Enter your name and press [ENTER]: "
	read name
	
	#echo "Welcome $name"
	
	echo -n "Can we store your information? [y/n] "
	read store
	
	if [ $store == "y" ]; then
		echo "Storing data..."
		echo $name >> file.txt
	else 
		echo "Bummer"
	fi
	
	echo -n "Would you like to see our friends? [y/n]"
	read friends
	
	if [ $friends == "y" ]; then
		echo "Our Friends:"
		
		while read line           
		do           
		    echo -e "$line"           
		done < file.txt  
	else 
		echo "Thanks for nothing!"
	fi	
}

help() {
	cat <<HELP
	
	OPTIONS:
		--help
		--version
	
HELP
}

show_commands() {
	echo "COMMANDS"
}

version() {
	mitchell_logo
	echo "mitchell version $version_number"
}

check_args() {
	if [ ! -z "$1" ]; then 
		"$1"
	fi
}

mitchell_logo() {
	cat <<MITCHELLTEXT
  __  __ _ _       _          _ _ 
 |  \/  (_) |_ ___| |__   ___| | |
 | |\/| | | __/ __| '_ \ / _ \ | |
 | |  | | | || (__| | | |  __/ | |
 |_|  |_|_|\__\___|_| |_|\___|_|_|

MITCHELLTEXT
}

main() {                          
	check_args "$@"
}

if [[ "${BASH_SOURCE[0]}" = "${0}" ]]; then
	main "$@"
fi