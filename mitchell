#!/bin/bash

# A bash script for awesomeness

version_number=0.1.0

about() {
	echo 'awesomeness'
}

beer() {
	echo 'beer'
}

help() {
	cat <<HELP
	
	OPTIONS:
		--help
		--version
	
HELP
}

show_commands() {
	echo 'COMMANDS'
}

version() {
	echo "mitchell version $version_number"
}

check_args() {
	if [ ! -z "$1" ]; then 
		"$1"
	fi
}

mitchell_text() {
	cat <<MITCHELLTEXT
  __  __ _ _       _          _ _ 
 |  \/  (_) |_ ___| |__   ___| | |
 | |\/| | | __/ __| '_ \ / _ \ | |
 | |  | | | || (__| | | |  __/ | |
 |_|  |_|_|\__\___|_| |_|\___|_|_|

MITCHELLTEXT
}

main() {
	mitchell_text
                                  
	check_args "$@"
}

if [[ "${BASH_SOURCE[0]}" = "${0}" ]]; then
	main "$@"
fi