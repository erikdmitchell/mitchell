#!/bin/bash

# A bash script for awesomeness

version_number=0.1.1

about() {
	mitchell_logo
	echo 'awesomeness'
}

beer() {
	echo 'beer'
}

version() {
	mitchell_logo
	echo "mitchell version $version_number"
}

check_args() {
	if [ ! -z "$1" ]; then 
		"$1"
    else
        about
	fi
}

mitchell_logo() {
	cat <<MITCHELLTEXT
  __  __ _ _       _          _ _ 
 |  \/  (_) |_ ___| |__   ___| | |
 | |\/| | | __/ __| '_ \ / _ \ | |
 | |  | | | || (__| | | |  __/ | |
 |_|  |_|_|\__\___|_| |_|\___|_|_|

MITCHELLTEXT
}

main() {                          
	check_args "$@"
}

if [[ "${BASH_SOURCE[0]}" = "${0}" ]]; then
	main "$@"
fi